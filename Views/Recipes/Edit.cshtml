@{
  Layout = "_Layout";
}

@model RecipeBox.Models.Recipe

<h2>Edit</h2>

<h4>Edit this task: @Html.DisplayFor(model => model.RecipeName)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.RecipeId)

    @Html.LabelFor(model => model.RecipeName)
    @Html.EditorFor(model => model.RecipeName)

    @Html.LabelFor(model => model.Ingredients)
    @Html.EditorFor(model => model.Ingredients)

    @Html.LabelFor(model => model.Instruction)
    @Html.EditorFor(model => model.Instruction)

    @Html.Label("Select category")
    @Html.DropDownList("CategoryId")

    <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to list", "Index", "Recipes")</p>