@{
  Layout = "_Layout";
}
@{
    ViewBag.Title = "Recipe Box";
}

<div class="jumbotron">
    <h1>Recipe Box</h1>
</div>
<div class="row">
    <div class="col-md-3">
        <h2>Recipe Box</h2>
        <p>Recipe Box is a sample application that
        demonstrates how to use Entity Framework 6 in an 
        ASP.NET MVC 5 web application.</p>
    </div>
    <div class="col-md-3">
      <p>@Html.ActionLink("See all Categories", "Index", "Categories")</p>   
    </div>
    <div class="col-md-3">
        <p>@Html.ActionLink("Create a new Category", "Create", "Categories")</p>
        <hr />
        <p>@Html.ActionLink("Add a new Recipe", "Create", "Recipes")</p>        
    </div>
    <div class="col-md-3">
        <p>@Html.ActionLink("See all Recipes", "Index", "Recipes")</p>
    </div>
</div>



