@{
  Layout = "_Layout";
}
@using RecipeBox.Models;

@model List<RecipeBox.Models.Category>;

<h1>Categories</h1>
 
@if(@Model.Count == 0)
{
  <p>There is no categories.</p>
}
else{
  <ol>
    @foreach(var category in Model)
    {
      <li>@Html.ActionLink($"{category.CategoryName}", "Details", new { id = category.CategoryId })</li>
    }
  </ol>
}

<p>@Html.ActionLink("Add new recipe", "Create")</p>
<p>@Html.ActionLink("Back to main", "Index", "Home")</p>